#include <iostream>

using namespace std;

int main() {
    setlocale(LC_ALL, "RUSSIAN");
    int op, count_null = 0, count_sin = 0;
    srand(time(NULL));
    cout << "Желаете сгенерировать чилса (1) или ввести их самомоу (2)?\n";
    cin >> op;
    float num;
    switch (op) {
    case 1: {
        for (int i = 0; i < 10; i++) {
            num = rand() % 10;
            if (num == 0) {
                count_null++;
            }
            else if (num >= -15 and num <= 15) {
                count_sin++;
            }
        }
        break;
    }
    case 2: {
        for (int i = 0; i < 10; i++) {
            cin >> num;
            if (num == 0) {
                count_null++;
            }
            else if (num >= -15 and num <= 15) {
                count_sin++;
            }
        }
        break;
    }
    }
    cout << "Числа равные нулю: ";
    cout << count_null << endl << "Синус чисел диапазона [-15; 15]: " << sin(count_sin);
}
