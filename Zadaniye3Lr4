#include <iostream>
#include <vector>

//xi = ((xi - 1) / 2) + (3 / 4) * xi
//i = 3, 4...

using namespace std;

double alg(vector <double> arr, int i = 1) {
	if (arr.size() < 20) {
		double temp = 2 * arr[i - 1];
		arr.push_back(temp);
		return alg(arr, i + 1);
	}
	double sum = 0;
	for (int i = 0; i < arr.size(); i++) {
		sum += arr[i];
	}
	cout << sum;
}

int main() {
	vector <double> x = { static_cast<double>(5) / 8 };
	cout << alg(x);
}
