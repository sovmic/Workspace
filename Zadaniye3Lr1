#include <iostream>
#include <cmath>

using namespace std;

int main() {
	setlocale(LC_ALL, "Russian");
	cout << "Введите координаты точки М:\n";
	float x, y, r = 1;
	//M(x,y) 13 рис.
	cin >> x >> y;
	if (pow(x, 2) + pow(y, 2) <= pow(r, 2)) {
		if ((x > 0 and y > -0.6) or (x < 0 and y < -0.6)) {
			cout << "Точка М с вашими координатами находится внутри заштрихованной области";
			return 0;
		}
		else if ((y >= -0.6 and x >= 0) or (x <= 0 and y <= -0.6)) {
			cout << "Точка М с вашими координатами находится на границе этой области";
		} else {
			cout << "Точка М с вашими координатами находится вне заштрихованной области";
		}
	}
	else {
		cout << "Точка М с вашими координатами находится вне заштрихованной области";
	}
}
