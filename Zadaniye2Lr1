#include <iostream>

using namespace std;

int main() {
	setlocale(LC_ALL, "Russian");
	float P1, R1, P2, R2, N, V1, V2;
	cout << "Вас приветствует программа для решения задачи. Теплоход проходит за P1 часа по течению и R1 часа против течения S км.\nОн же за R2 ч против течения проходит на N км больше, чем за P2 ч по течению.\nОпределить скорость теплохода по течению и против течения\n";
	cout << "V1 - скорость теплохода по течению, V2 - скорость теплохода против течения. Составим систему уравнений:\nV1 * P1 = S\nV2 * R1 = S\nV2 * R2 = S\nV2 * P2 = S - N\n\n";
	cout << "Введите значения переменных P1 - количество часов по течению, R1 - количество часов против течению, P2 - количество часов по течению, R2 - количество часов против течению:\n";
	cout << "P1 = "; cin >> P1;
	cout << "R1 = "; cin >> R1;
	cout << "P2 = "; cin >> P2;
	cout << "R2 = "; cin >> R2;
	cout << "N = "; cin >> N;
	V2 = (-N * P1) / (R1 * P2 - R2 * P1);
	V1 = (V2 * R1) / P1;
	cout << "Скорость теплохода по течению = " << V1 << endl << "Скорость теплохода против течения = " << V2 << endl;
	system("PAUSE");
}
