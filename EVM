#include <iostream>
#include <cmath>
#include <string>
#include <vector>
#include <algorithm>

using namespace std;

string to_binary(int num) {
	if (num == 0) {
		return "";
	}

	return to_binary(num / 2) + to_string(num % 2);
}


int main() {

	int num = -84;
	
	int result = stoi(to_binary(abs(num)));
	cout << result << endl;
	vector <int> binary = {};
	int temp = result;
	int count = 0;
	while (temp >= 1) {
		temp /= 10;
		count++;
	}

	for (int i = 0; i < count; i++) {
		temp = result % 10;
		binary.push_back(temp);
		result /= 10;
	}

	reverse(binary.begin(), binary.end());

	vector <int> new_num_bin = { 0 };

	for (int i = 0; i < binary.size(); i++) {
		new_num_bin.push_back(binary[i]);
	}

	
	for (int i = 0; i < new_num_bin.size(); i++) {

		cout << new_num_bin[i];
	}

	cout << endl;

	for (int i = 0; i < new_num_bin.size(); i++) {
		if (new_num_bin[i] == 1) {
			new_num_bin[i] = 0;
		}
		else if (new_num_bin[i] == 0) {
			new_num_bin[i] = 1;
		}
		cout << new_num_bin[i];
	}
	
}
